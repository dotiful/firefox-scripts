  onToolbarButtonCommand: function(e) {
    // just reuse the function above.  you can change this, obviously!
    clearcache.onMenuItemCommand(e);
  },

   onStatusbarButtonCommand: function(e) {
    // just reuse the function above.  you can change this, obviously!
    clearcache.onMenuItemCommand(e);
  }


